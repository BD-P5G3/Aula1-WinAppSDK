<Window
    x:Class="App1.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="20">
        <TextBox Name="addressTextBox"  Header="SQL Database Address" />
        <TextBox Name="userTextBox" Header="Username" />
        <PasswordBox Name="passwordBox" Header="Password" />
        <StackPanel Orientation="Horizontal" Spacing="20">
            <Button x:Name="testButton" Click="testButton_Click">Test connection</Button>
            <Button x:Name="getContentButton" Click="getContentButton_Click" Style="{StaticResource AccentButtonStyle}">Get table content</Button>
        </StackPanel>
    </StackPanel>
</Window>
